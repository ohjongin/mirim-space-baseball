<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:textSize="@dimen/play_list_text_size_enhanced"
            android:singleLine="true"
            android:gravity="center"
            tools:text="1회전"/>

        <TextView
            android:id="@+id/tv_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/play_list_text_size_enhanced"
            android:textStyle="bold"
            android:singleLine="true"
            android:gravity="center"
            tools:text="문예빈"/>

        <TextView
            android:id="@+id/tv_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/play_list_text_size_enhanced"
            android:singleLine="true"
            android:gravity="center"
            tools:text="[1,2,3,4,5]]"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_stike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:padding="3dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/round_rect">

            <View
                android:id="@+id/gap_strike0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_strike0"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_strike"/>

            <View
                android:id="@+id/gap_strike1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_strike1"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_strike"/>

            <View
                android:id="@+id/gap_strike2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_strike2"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_strike"/>

            <View
                android:id="@+id/gap_strike3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_strike3"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_strike"/>

            <View
                android:id="@+id/gap_strike4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_strike4"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_strike"/>

            <View
                android:id="@+id/gap_strike5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ball"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:padding="3dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/round_rect">

            <View
                android:id="@+id/gap_ball0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_ball0"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_ball"/>

            <View
                android:id="@+id/gap_ball1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_ball1"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_ball"/>

            <View
                android:id="@+id/gap_ball2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_ball2"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_ball"/>

            <View
                android:id="@+id/gap_ball3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_ball3"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_ball"/>

            <View
                android:id="@+id/gap_ball4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_ball4"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_ball"/>

            <View
                android:id="@+id/gap_ball5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:padding="3dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/round_rect">

            <View
                android:id="@+id/gap_out0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_out0"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_out"/>

            <View
                android:id="@+id/gap_out1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_out1"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_out"/>

            <View
                android:id="@+id/gap_out2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_out2"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_out"/>

            <View
                android:id="@+id/gap_out3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_out3"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_out"/>

            <View
                android:id="@+id/gap_out4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_out4"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="1dp"
                android:enabled="false"
                android:src="@drawable/selector_out"/>

            <View
                android:id="@+id/gap_out5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
