<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:singleLine="true"
        tools:text="1회전"/>

    <TextView
        android:id="@+id/tv_player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:singleLine="true"
        tools:text="문예빈"/>

    <TextView
        android:id="@+id/tv_users"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:singleLine="true"
        tools:text="[1, 3, 5]]"/>

    <LinearLayout
        android:id="@+id/layout_stike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:padding="3dp"
        android:orientation="horizontal"
        android:background="@drawable/round_rect">

        <ImageView
            android:id="@+id/iv_strike0"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_margin="1dp"
            android:enabled="false"
            android:src="@drawable/selector_circle"/>

        <ImageView
            android:id="@+id/iv_strike1"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_margin="1dp"
            android:enabled="false"
            android:src="@drawable/selector_circle"/>

        <ImageView
            android:id="@+id/iv_strike2"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_margin="1dp"
            android:enabled="false"
            android:src="@drawable/selector_circle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:padding="3dp"
        android:orientation="horizontal"
        android:background="@drawable/round_rect">

        <ImageView
            android:id="@+id/iv_ball0"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_margin="1dp"
            android:enabled="false"
            android:src="@drawable/selector_circle"/>

        <ImageView
            android:id="@+id/iv_ball1"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_margin="1dp"
            android:enabled="false"
            android:src="@drawable/selector_circle"/>

        <ImageView
            android:id="@+id/iv_ball2"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_margin="1dp"
            android:enabled="false"
            android:src="@drawable/selector_circle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:padding="3dp"
        android:orientation="horizontal"
        android:background="@drawable/round_rect">

        <ImageView
            android:id="@+id/iv_out0"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_margin="1dp"
            android:enabled="false"
            android:src="@drawable/selector_circle"/>

        <ImageView
            android:id="@+id/iv_out1"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_margin="1dp"
            android:enabled="false"
            android:src="@drawable/selector_circle"/>

        <ImageView
            android:id="@+id/iv_out2"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_margin="1dp"
            android:enabled="false"
            android:src="@drawable/selector_circle"/>
    </LinearLayout>
</LinearLayout>
